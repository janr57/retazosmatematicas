%% ----------- MACROS --------------------------------------------------------
% Vectores
\newcommand*{\vvv}[1]{%
  % Actívese sólo una de las dos opciones
  %\ensuremath{\vec{#1}}
  %\ensuremath{\kern1.2pt\mathbf{#1}}
  \ensuremath{\kern1.2pt\symbf{#1}}
}

% Matrices
\newcommand*{\mmm}[1]{%
  % Actívese sólo una de las dos opciones
  %\ensuremath{\operatorname{#1}}
  %\ensuremath{\kern1.2pt\mathbf{#1}}
  \ensuremath{\kern1.2pt\symbf{#1}}
}

% Matrices representadas por letras griegas
\newcommand*{\mmmg}[1]{%
  % Actívese sólo una de las dos opciones
  %\ensuremath{#1}
  %\ensuremath{{\kern1.2pt\boldsymbol{#1}}}
  \ensuremath{{\kern1.2pt\symbf{#1}}}
}

% Producto vectorial
\newcommand{\prodvec}{%
  % Actívese sólo una de las dos opciones
  \ensuremath{\times}
}

\newcommand{\transp}{%
  \ensuremath{{\top}}
}

\newcommand{\trasp}{%
  \ensuremath{{\top}}
}

% Tensores
\newcommand*{\ttt}[1]{%
  % Actívese sólo una de las dos opciones
  %\ensuremath{#1}
  %\ensuremath{{\kern1.2pt\boldsymbol{#1}}}
  \ensuremath{{\kern1.2pt\overbar{\symbf{#1}}}}
}

\newcommand{\xhat}[1]{%
  % Actívese sólo una de las dos opciones
  %\ensuremath{\kern5.2pt\pmb{{\kern-0.5em\hat{\mathrm{#1}}}}}
  %\ensuremath{\kern1.2pt\pmb{\hat{#1}}}
  \ensuremath{\kern1.2pt\symbf{\hat{#1}}}
}

\newcommand{\xtilde}[1]{%
  % Actívese sólo una de las dos opciones
  %\ensuremath{\kern5.2pt\pmb{{\kern-0.5em\hat{\mathrm{#1}}}}}
  %\ensuremath{\kern1.2pt\pmb{\hat{#1}}}
  \ensuremath{\kern1.2pt\symbf{\tilde{#1}}}
}

\newcommand{\xdottilde}[1]{%
    \ensuremath{\vvv{\dot{\tilde{r}}}}
}

% \uvec{\i} y \uvec{\j} producen i y j sin punto y con acento circunflejo en negrita
